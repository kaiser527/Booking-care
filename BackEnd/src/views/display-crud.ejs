<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <!-- Latest compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Get CRUD</title>
  </head>
  <body>
    <table>
      <thead>
        <tr>
          <th>Email</th>
          <th>Full name</th>
          <th colspan="2">Address</th>
          <th>Role</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% dataTable.forEach(function(data, i){ %>
        <tr>
          <td><%= data.email %></td>
          <td><%= data.fullName %></td>
          <td><%= data.address %></td>
          <td><%= data.status %></td>
          <td><%= data.roleId %></td>
          <td>
            <a href="/edit-crud?id=<%= data.id%>">
              <button class="btn-warning btn mx-1 w-25" type="button">
                Edit
              </button>
            </a>
            <a href="/delete-crud?id=<%= data.id%>">
              <button class="btn-danger btn mx-1" type="button">Delete</button>
            </a>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
